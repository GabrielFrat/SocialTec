<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CompPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:layout_marginTop="50dp"
               android:text="Bem-Vindo ao SocialTec!"
               android:fontFamily="@font/rowdies_bold"
               android:textSize="28sp"
               android:gravity="center"
               />


           <TextView
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="Vamos escolher uma foto para o seu perfil?"
               android:fontFamily="@font/rowdies"
               android:layout_gravity="center"
               android:gravity="center"/>

           <ImageButton
               android:id="@+id/fotoPerfil"
               android:layout_width="300dp"
               android:layout_height="300dp"
               android:layout_gravity="center"
               android:scaleType="centerCrop"
               android:background="@drawable/perfil_pic"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="Adicione uma Biografia:"
               android:fontFamily="@font/rowdies"
               android:layout_marginTop="40dp"
               android:layout_marginStart="15dp"
               />

           <EditText
               android:id="@+id/biografia"
               android:layout_width="350dp"
               android:layout_height="80dp"
               android:hint="Desenvolvedor Python..."
               android:inputType="text"
               android:layout_gravity="center"
               android:background="@drawable/border_editext"
               />





           <Button
               android:id="@+id/btn_cadPerfil"
               android:layout_width="350dp"
               android:layout_gravity="center"
               android:layout_marginTop="50dp"
               android:layout_height="70dp"
               android:backgroundTint="@color/btn_azul"
               android:fontFamily="@font/rowdies_bold"
               android:text="Finalizar Cadastro"
               android:textSize="18sp" />
       </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>