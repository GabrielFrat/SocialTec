<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RedefinirEmail">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/rowdies_bold"
        android:gravity="center"
        android:text="Redefinição de E-Mail"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Após a conclusão do curso os alunos da FATEC/Centro Paula Souza perdem o acesso ao seu e-mail-institucional. Por favor, altere seu e-mail de acesso ao SocialTec por um e-mail pessoal e valide seu acesso no mesmo E_Mail!"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="@font/rowdies"
        app:layout_constraintBottom_toTopOf="@+id/txtView_NewEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtView_NewEmail"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/border_editext"
        android:hint="gabrielfrat@hotmail.com"
        android:inputType="text"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRedefinir_Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRedefinir_Email"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/btn_azul"
        android:text="Redefinir Senha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>